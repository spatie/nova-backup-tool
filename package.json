        "lint": "eslint resources/js --fix --ext js,vue"
    },
    "devDependencies": {
        "cross-env": "^5.0.0",
        "eslint": "^4.19.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-vue": "^4.4.0",
        "laravel-nova-devtool": "file:vendor/laravel/nova-devtool",
        "prettier": "^1.14.2"
    }
}
